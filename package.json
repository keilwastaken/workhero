{
  "name": "workhero",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "build": "pnpm -r run build && tsc",
    "start": "node dist/index.js",
    "worker": "node dist/worker.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "dev:worker": "WORKER_CONCURRENCY=5 nodemon --watch src --ext ts --exec ts-node src/worker.ts",
    "test": "vitest run",
    "db:clear": "ts-node src/scripts/clear-db.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.1",
    "@workhero/db": "workspace:*",
    "@workhero/queue": "workspace:*",
    "@workhero/repositories": "workspace:*",
    "express": "^5.2.1",
    "swagger-ui-express": "^5.0.1",
    "uuidv7": "^1.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
