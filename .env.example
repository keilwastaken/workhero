# API server port
PORT=3000

# Path to LMDB data directory (created automatically on first run)
LMDB_PATH=./data

# Wikipedia MediaWiki API URL
WIKIPEDIA_API_URL=https://en.wikipedia.org/w/api.php

# Number of concurrent workers in the worker process
WORKER_CONCURRENCY=5

# Max retry attempts before a ticket is permanently failed
MAX_RETRIES=3

# How long (ms) before a processing ticket is considered stale and reclaimed
LEASE_TIMEOUT_MS=30000

# Worker poll interval (ms) when no jobs are available
POLL_INTERVAL_MS=500
