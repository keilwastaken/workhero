{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "nodenext",
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["*.ts"]
}
